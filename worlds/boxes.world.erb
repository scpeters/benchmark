<?xml version="1.0" ?>

<%
  # Boxes benchmark example world
  # SI units (length in meters)
  # model_count =1 
  # default values
  boxes = 1 
  complex = 0
  dt =  0.001
  collision = 1
  engine = "ode"
  
  unless (defined?(count_arg)).nil?
    boxes = count_arg.to_i  
  end

  unless (defined?(collision_arg)).nil?
    collision = collision_arg.to_i
  end

  unless (defined?(dt_arg)).nil?
    dt = dt_arg.to_f
  end

  unless (defined?(complex_arg)).nil?
    complex = complex_arg.to_i
  end

  unless (defined?(engine_arg)).nil?
    engine = engine_arg
  end

  dx   = 0.1
  dy   = 0.4
  dz   = 0.9

  if complex == 0
    v0 = [-0.9, 0.4, 0.1]
    w0 = [0.5, 0.0, 0.0]
    gravity = [0, 0, 0]
  else
    v0 = [-2.0, 2.0, 8.0]
    w0 = [0.1, 5.0, 0.1]
    gravity = [0, 0, -9.80]
  end
%>
<sdf version="1.5">
  <world name="default">
    <physics type="<%= engine %>">
      <max_step_size><%= dt %></max_step_size>
      <gravity><%= gravity.join(" ") %></gravity>
    </physics>
    <include>
      <uri>model://sun</uri>
    </include>
<%
  boxes.times do |i|
    name = "box_" + i.to_s
    y0 = dz * 2 * i
%>
    <model name="<%= name %>">
      <pose>0 <%= y0 %> 0  0 0 0</pose>
       <link name="link">
      <inertial>
        <mass>10</mass>
        <inertia>
          <ixx>0.8083333333333335</ixx>
          <iyy>0.6833333333333335</iyy>
          <izz>0.14166666666666672</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <% if collision == 1 %>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.1 0.4 0.9</size>
            </box>
          </geometry>
        </collision>
      <% end %>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.1 0.4 0.9</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>
    
    <plugin name="<%= name %>" filename="libInitialVelocityPlugin.so">
        <linear><%= v0.join(" ") %></linear>
        <angular><%= w0.join(" ") %></angular>
      </plugin>
    </model>
<%
  end
%>
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>8.5 5.5 0.3  0 0 3.14159</pose>
        <view_controller>orbit</view_controller>
      </camera>
    </gui>
  </world>
</sdf>